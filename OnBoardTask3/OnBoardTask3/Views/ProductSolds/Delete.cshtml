@model OnBoardTask3.Models.ProductSold

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div id="deleteSale">
    <h4>ProductSold (Id <span data-bind="text: selectedSale.Id"></span>)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateSold)
        </dt>
        <dd data-bind="text: selectedSale.DateSold"></dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </dt>
        <dd data-bind="text: selectedSale.CustomerName()"></dd>

        <dt>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd data-bind="text: selectedSale.ProductName"></dd>

        <dt>
            @Html.DisplayNameFor(model => model.Store.StoreName)
        </dt>
        <dd data-bind="text: selectedSale.StoreName"></dd>


    </dl>

    @using (Html.BeginForm("Delete", "ProductSolds", FormMethod.Post, new { id = "delete-sale-form", action = "javascript:void(0);" }))
    {
        @Html.AntiForgeryToken()
        <input hidden data-bind="value: selectedSale.ProductsSoldID" id="Id" name="Id" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" data-bind="click: deleteConfirmed" />
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
